<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ControladorInicio</servlet-name>
        <servlet-class>ui.servlets.controladores.ControladorInicio</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorPrecios</servlet-name>
        <servlet-class>ui.servlets.controladores.ControladorPrecios</servlet-class>
    </servlet>    
    <servlet>
        <servlet-name>ControladorDispositivos</servlet-name>
        <servlet-class>ui.servlets.controladores.ControladorDispositivos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorEmpleados</servlet-name>
        <servlet-class>ui.servlets.controladores.ControladorEmpleados</servlet-class>
    </servlet>  
    <servlet-mapping>
        <servlet-name>ControladorInicio</servlet-name>
        <url-pattern>/inicio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorPrecios</servlet-name>
        <url-pattern>/precios</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorDispositivos</servlet-name>
        <url-pattern>/dispositivos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorEmpleados</servlet-name>
        <url-pattern>/empleados</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>inicio</welcome-file>
    </welcome-file-list>
</web-app>
